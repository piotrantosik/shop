{% extends 'base.html.twig' %}

{% block content %}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    {{ knp_pagination_sortable(pagination, 'table.product.header.name', 'e.name', {'translationDomain': 'messages'}) }}
                </th>
                <th>
                    {{ knp_pagination_sortable(pagination, 'table.product.header.price', 'e.price.amount', {'translationDomain': 'messages'}) }}
                </th>
            </tr>
        </thead>
        <tbody>
        {% for product in pagination %}
            <tr>
                <td>
                    <h2>
                        {{ product.name }}
                    </h2>
                </td>
                <td>
                    {{ product.price|money_localized_format }}
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <p>
                        {{ product.description }}
                    </p>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">
                    {{ knp_pagination_render(pagination) }}
                </td>
            </tr>
        </tfoot>
    </table>
{% endblock %}
