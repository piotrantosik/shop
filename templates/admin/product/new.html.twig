{% extends 'base.html.twig' %}

{% block content %}
    {{ form_start(form, { 'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_errors(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.description) }}
        {{ form_row(form.price) }}

        <button type="submit" class="btn btn-default">
            {{ 'form.product.submit.label'|trans }}
        </button>
    {{ form_end(form) }}
{% endblock %}
